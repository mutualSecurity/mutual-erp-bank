<openerp>
    <data>
       <!-- ================================================== Begin Form views of Report Wizard ================================================ -->
        <record id="wiz_recovery_report_form" model="ir.ui.view">
            <field name="name">view.form.wiz.report</field>
            <field name="model">wiz.reports</field>
            <field name="arch" type="xml">
                <form string="Report" version="8.0">
                        <footer>
                            <button name="print_report" type="object" string="Print" class="oe_highlight"/>
                            OR
                            <button string="Cancel" class="oe_link" special="cancel"/>
                        </footer>
                </form>
            </field>
        </record>
        <!-- ================================================== End Form views of Report Wizard ================================================ -->
        <record id="action_wiz_recovery_report_form" model="ir.actions.act_window">
            <field name="name">Recovery Report</field>
            <field name="res_model">wiz.reports</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>
    </data>
</openerp>

