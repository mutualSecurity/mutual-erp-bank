<?xml version="1.0" encoding="utf-8" ?>
<openerp>
    <data>
        <!--the template id should be the same name file-->
       <template id="custom_report_mutual_req_pdf">
           <t t-call='report.html_container'>
               <table>
                   <tr t-foreach="docs" t-as="obj">
                        <div class="page">
                            <h1 align="center">Incharge Store</h1>
                            <div style="font-size:18px;width:900px;display:inline-block;">
                                  <span style="font-size:18px">
                                      <strong>Recipt No:</strong><span t-esc="obj['id']"/>
                                      <br/>
                                      <strong>Date:</strong><span t-esc="obj['date']"/></span><br/>
                                      <strong>Receipt Type:</strong><span t-esc="obj['req_type']" /><br/>
                                  <div style="border:2px solid grey; padding:10px;border-radius:10px;">
                                      <strong style="font-size:18px">Title:</strong><br/>
                                      <span t-esc="obj['title']"/><br/>

                                  </div>
                            </div>
                            <table class="table table-condensed" style="font-size:18px">
                                  <thead>
                                      <tr>
                                          <th>Product Name</th>
                                          <!--<th colspan="2"><center>Billing Period</center></th>-->
                                          <th>Customer</th>
                                          <th>Reference</th>
                                          <th>Quantity</th>
                                          <!--<th class="text-right">Unit Price</th>-->
                                      </tr>
                                  </thead>
                                  <tbody class="invoice_tbody">
                                      <tr t-foreach="obj['products']" t-as="l">
                                          <td>
                                               <span t-esc="l['product_name']['name']"/><br/>
                                          </td>
                                          <td>
                                              <span t-esc="l['customer']['name']"/><br/>
                                          </td>
                                          <td>
                                              <span t-esc="l['ref_to']"/><br/>
                                          </td>
                                          <td>
                                              <span t-esc="l['quantity']"/><br/>
                                          </td>
                                      </tr>


                                  </tbody>
                            </table>
                             <br></br><br></br>
                            <div class="row"><br/><br/>
                              <div class="pull-left" style="font-size:17px;text-decoration:overline;">
                                 <span style="margin-top:5px;">
                                     <strong>
                                            Incharge Store
                                     </strong>
                                 </span>
                              </div>
                              <div class="pull-right" style="font-size:17px;text-decoration:overline;">
                                 <span style="margin-top:5px;">
                                         <strong>
                                            For Mutual Security systems
                                         </strong>

                                 </span>
                              </div>
                          </div>

                        </div>
                   </tr>
               </table>
           </t>
       </template>
    </data>
</openerp>